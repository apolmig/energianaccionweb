---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPosts = publishedPosts.filter(post => post.data.featured);
const regularPosts = publishedPosts.filter(post => !post.data.featured);
---

<Layout 
  title="Blog - Energía en Acción" 
  description="Descubre insights, casos de éxito y guías prácticas sobre mentoring profesional, proyectos sociales e innovación educativa."
>
  <Header />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        Blog de <span class="text-green-700">Energía en Acción</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Insights, casos de éxito y guías prácticas sobre mentoring profesional, 
        proyectos sociales e innovación educativa.
      </p>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 flex items-center">
          <svg class="w-6 h-6 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          Artículos Destacados
        </h2>
        
        <div class="grid lg:grid-cols-2 gap-8">
          {featuredPosts.map((post) => (
            <article class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
              {post.data.heroImage && (
                <div class="relative overflow-hidden">
                  <img 
                    src={post.data.heroImage} 
                    alt={post.data.title}
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    width="400"
                    height="200"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="bg-yellow-500 text-white text-xs font-semibold px-3 py-1 rounded-full">
                      Destacado
                    </span>
                  </div>
                </div>
              )}
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-600 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long', 
                      day: 'numeric'
                    })}
                  </time>
                  <span class="mx-2">•</span>
                  <span>{post.data.author}</span>
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-green-700 transition-colors">
                  <a href={`/blog/${post.slug}`} class="line-clamp-2">
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 2).map(tag => (
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-800">
                        #{tag}
                      </span>
                    ))}
                  </div>
                  
                  <a 
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center text-green-600 hover:text-green-700 font-medium text-sm transition-colors"
                  >
                    Leer más
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- Regular Posts -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-8">
        Todos los Artículos
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {regularPosts.map((post) => (
          <article class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
            {post.data.heroImage && (
              <div class="relative overflow-hidden">
                <img 
                  src={post.data.heroImage} 
                  alt={post.data.title}
                  class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  width="300"
                  height="160"
                />
              </div>
            )}
            
            <div class="p-5">
              <div class="text-sm text-gray-600 mb-2">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
              
              <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-700 transition-colors">
                <a href={`/blog/${post.slug}`} class="line-clamp-2">
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                {post.data.description}
              </p>
              
              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-1">
                  {post.data.tags.slice(0, 2).map(tag => (
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700">
                      #{tag}
                    </span>
                  ))}
                </div>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-green-600 hover:text-green-700 font-medium text-sm transition-colors"
                >
                  Leer →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="mt-16 bg-gradient-to-r from-green-50 to-green-100 rounded-2xl p-8 md:p-12 border border-green-200">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">
          ¿Quieres recibir nuestros últimos artículos?
        </h2>
        <p class="text-gray-700 mb-6 max-w-2xl mx-auto">
          Únete a nuestra comunidad de mentores y recibe insights exclusivos sobre 
          mentoring profesional, casos de éxito y oportunidades de impacto social.
        </p>
        <a 
          href="https://form.typeform.com/to/NtmGk30X" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center space-x-2 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          <span>Únete a la Comunidad</span>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>