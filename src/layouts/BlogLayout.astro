---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  author: string;
  tags: string[];
}

const { title, description, pubDate, updatedDate, heroImage, author, tags } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
const formattedUpdatedDate = updatedDate?.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={title} description={description}>
  <Header />
  
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-green-600 transition-colors">Inicio</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/blog" class="hover:text-green-600 transition-colors">Blog</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 truncate">{title}</li>
      </ol>
    </nav>

    <!-- Hero Image -->
    {heroImage && (
      <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
        <img 
          src={heroImage} 
          alt={title}
          class="w-full h-64 sm:h-96 object-cover"
          loading="lazy"
          width="800"
          height="400"
        />
      </div>
    )}

    <!-- Article Header -->
    <header class="mb-8 border-b border-gray-200 pb-8">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        {title}
      </h1>
      
      <p class="text-lg sm:text-xl text-gray-600 mb-6 leading-relaxed">
        {description}
      </p>

      <!-- Article Meta -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
          </svg>
          <span>Por <strong class="text-gray-900">{author}</strong></span>
        </div>
        
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        </div>

        {updatedDate && (
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
            </svg>
            <span>Actualizado el {formattedUpdatedDate}</span>
          </div>
        )}
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map(tag => (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 hover:bg-green-200 transition-colors">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg prose-green max-w-none">
      <slot />
    </div>

    <!-- Article Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-2xl p-6 border border-green-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">
          ¿Te gustaría ser mentor en Energía en Acción?
        </h3>
        <p class="text-gray-700 mb-4">
          Únete a nuestra comunidad de {author === 'Energía en Acción' ? 'más de 150' : '150+'} mentores profesionales 
          y ayuda a transformar el futuro a través de proyectos sociales reales.
        </p>
        <a 
          href="https://form.typeform.com/to/NtmGk30X" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center space-x-2 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
          </svg>
          <span>¡Quiero ser Mentor!</span>
        </a>
      </div>

      <!-- Share Buttons -->
      <div class="mt-8">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Compartir este artículo:</h4>
        <div class="flex space-x-3">
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.toString())}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition-colors text-sm font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Twitter
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-700 text-white hover:bg-blue-800 transition-colors text-sm font-medium"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </footer>
  </article>

  <Footer />
</Layout>

<style>
  .prose {
    color: #1f2937;
    line-height: 1.75;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #111827;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #166534;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    margin-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: #059669;
    text-decoration: underline;
    transition: color 0.15s ease-in-out;
  }
  
  .prose a:hover {
    color: #047857;
  }
  
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose blockquote {
    border-left: 4px solid #10b981;
    padding-left: 1rem;
    font-style: italic;
    color: #374151;
    margin: 1.5rem 0;
  }
  
  .prose code {
    background-color: #f3f4f6;
    color: #1f2937;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }
  
  .prose pre {
    background-color: #111827;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #d1d5db;
    margin: 1.5rem 0;
  }
  
  .prose th, .prose td {
    border: 1px solid #d1d5db;
    padding: 1rem;
    text-align: left;
  }
  
  .prose th {
    background-color: #f3f4f6;
    font-weight: 600;
  }
</style>